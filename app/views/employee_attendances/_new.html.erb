<label class="head_label"><%= t('attendance.for') %> <span><%= @employee.first_name %></span></label>
<div id="ajax-edit">


  <% form_remote_for @attendance do |f| %>
      <%= f.hidden_field :employee_id, :value => @employee.id %>
      <%= f.hidden_field :attendance_date, :value => @date %>
      <br/>

      <div class="label-field-pair">
        <label for="leave_type"> <%= t('attendance.leaveType') %></label>

        <div class="text-input-bg"><%= select :employee_attendance, :employee_leave_type_id, @leave_types.map { |c| [c.name, c.id] }, :prompt => "Select a leave type" %></div>
      </div>
      <div class="label-field-pair">
        <label for="leave_type"> <%= t('attendance.reasonForAbsence') %></label>

        <div class="text-input-bg"><%= f.text_field :reason %></div>
      </div>
      <div class="label-checkbox-pair">
        <label><%= f.check_box :is_half_day, :checked => false %><%= t('attendance.isHalfDay') %></label>
      </div>
      <div class="extender"></div>
      <%= f.submit 'Submit', :class => 'submit-button', :confirm => t('areYouSure') %>
  <% end %>
  <div id="form-errors"></div>
</div>
