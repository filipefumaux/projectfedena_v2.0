<div id="weekday-form">
  <p><%= @batch.full_name unless @batch.nil? %></p>

  <% form_remote_for @weekday do |f| %>

      <% batch_id = (@batch.nil? ? nil : @batch.id) %>
      <%= f.hidden_field :batch_id, :value => batch_id %>

      <p>
        <%= f.label :select_weekday %>
        <%= select :weekday, :weekday, {t("monday")=>'1', t("tuesday") => '2', t("thursday") =>'3', t("wednesday") =>'4', t("friday") =>'5', t("saturday")=>'6', t("sunday")=>'0'} %>
      </p>
      <%= f.check_box :is_break, :checked => false %> <%= t('checkIfIsBreak') %>
      <%= f.check_box :is_break, :checked => false %> <%= t('checkIfIsBreak') %>
      <p>
        <%= f.submit %>
      </p>

      <div id="form-errors"></div>

  <% end %>
</div>
