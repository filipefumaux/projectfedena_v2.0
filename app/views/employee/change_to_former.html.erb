<div id="content-header">
  <img src="/images/HR/show_hr.png" alt=""/>

  <h1><%= t("students") %></h1>

  <h3><%= t('leavingSchool') %></h3>

  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png", :border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <div id="student-details">
    <h4> <%= @employee.first_name %> | <%= t('employee.number') %> : <%= @employee.employee_number %>
      | <%= t("department") %>
      : <%= @employee.employee_department.name %> </h4>
  </div>

  <div class="extender"></div>

  <div id="remove-student">
    <p><%= t('employee.descEmployeeLeavingSchool') %>.</p>

    <% form_for :remove do |f| %>
        <div class="label-field-pair">
          <label for="remove_descr"><%= t('reasonForLeaving') %></label>

          <div class="text-input-bg"><%= f.text_field :status_description %></div>
        </div>

        <div id="submit-button">
          <%= submit_tag 'â–º ' + t("remove"), :class=>'submit_button' %>
        </div>

    <% end %>
  </div>

</div>