<div id="content-header">
  <img src="/images/HR/show_hr.png" alt=""/>

  <h1><%= t('employee.title') %></h1>

  <h3><%= t('employee.remove') %></h3>

  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png", :border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <div id="student-details">
    <h4> <%= @employee.first_name %> | <%= t('employee.number') %> : <%= @employee.employee_number %>
      | <%= t('department') %> : <%= @employee.employee_department.name %> </h4>
  </div>

  <div class="extender"></div>
  <div class="box">
    <% if @employee.status == true %>
        <div class="link-box">
          <div class="link-heading"> <%= link_to t('employee.leaveInstitution'), :controller => "employee", :action => "change_to_former", :id => @employee.id %> </div>
          <div class="link-descr"><%= t('employee.leaveInstitutionDesc') %></div>
        </div>
    <% else %>
        <div class="link-box">
          <div class="link-heading"><a><%= t('employee.hasLeft') %></a></div>
          <div class="link-descr"><b><%= t('employee.reason') %></b><%= %> </div>
        </div>
    <% end %>
    <div class="link-box">
      <div class="link-heading"> <%= link_to t('employee.removeRecord'), :controller => "employee", :action => "delete", :id => @employee.id %> </div>
      <div class="link-descr"><%= t('employee.removeRecordDesc') %></div>
    </div>
  </div>
