  <% if @employee.status == true %>
  <div class="link-box">
    <div class="link-heading"> <%= link_to t('employee.leaveInstitution'), :controller => "employee", :action => "change_to_former", :id => @employee.id %> </div>
    <div class="link-descr"><%= t('employee.leaveInstitutionDesc') %></div>
  </div>
  <% else %>
    <div class="link-box">
    <div class="link-heading"> <a><%= t('employee.hasLeft') %></a> </div>
