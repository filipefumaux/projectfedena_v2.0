<% if @employee.nil? %>
    <div id="no_result"><%= t('employee.notFound') %></div>
<% else %>
    <% @employee.each do |r| %>
        <div id="ajax_result">
          <% link_value = r.first_name + " " + r.last_name %>
          <%= link_to link_value, :controller => "employee", :action => "profile", :id => r.id %>
          <br/>
          <small><%= t('employee.empId') %>.<%= r.employee_number %></small>
        </div>
    <% end %>
<% end %>
