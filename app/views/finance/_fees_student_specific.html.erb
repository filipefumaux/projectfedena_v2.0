<% form_for :element, :url => {:action => 'fees_student_specific', :id => @student.id, :date =>@date.id} do |f| %>
    <div id="create_user_form">
      <div class="label_field">
        <label for="label"><%= t('label') %></label>

        <div class="text_field_bg"><%= f.text_field :label %></div>
        <div class="comment"><%= t('finance.LeaveTheFieldBlankToOverride') %>.</div>
      </div>
      <div class="label_field">
        <label for="amount"><%= t('amount') %></label>

        <div class="text_field_bg"><%= f.text_field :amount %></div>
      </div>
      <div class="label_field">
        <label for="amount"><%= t('finance.selectAFeeCategoryToOverride') %></label>

        <div class="text_field_bg"><%= select :element, :parent_id, @components.map { |c| [c.label, c.id] }, :prompt => t('selectACategory') %></div>
      </div>

      <div class="label_field">
        <%= image_submit_tag "", :value => t("saveChanges"), :class => "submit_button" %>
      </div>
    </div>
<% end %>