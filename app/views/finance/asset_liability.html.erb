<div id="content-header">
  <img src="/images/show_finance.png" alt=""/>

  <h1><%= t('finance.title') %></h1>

  <h3><%= t("assetManagement") %></h3>

  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png", :border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
      <p class="flash-msg"><%= flash[:notice] %></p>
  <% end %>
  <div class="box">
    <div class="link-box">
      <div class="link-heading"><%= link_to t('asset'), :action => "asset" %> </div>
      <div class="link-descr"><%= t("manage")+" "+ t('asset') %></div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to t('liability'), :action => "liability" %> </div>
      <div class="link-descr"><%= t("manage") %> <%= t('liability') %></div>
    </div>

  </div>
</div>