<label class="head_label"><%= t('createMasterCategoryFee') %><span></span></label>


<div id="grading-levels-form">

  <% form_remote_for @finance_fee_category, :url=>{:action=>'master_category_create'} do |f| %>

      <div id="form-errors"></div>


      <div class="label-field-pair">
        <div class="label-container"><%= f.label :name %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label :description %></div>
        <div class="input-container"><%= f.text_field :description %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><label><%= t('selectCourse') %> :</label></div>
        <div class="input-container"><%= f.select :batch_id, @batches.map { |c| [c.full_name, c.id] }, {:prompt => t('selectCourse')} %></div>
      </div>

      <%= submit_tag "â–º " + t('save'), :class=>'submit_button' %>


  <% end %>
</div>