<div id="content-header">
  <img src="/images/show_finance.png" alt=""/>

  <h1><%= t('liabilityView') %></h1>

  <h3><%= @liability.title %></h3>

  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png", :border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">


  <div id="liability-body">
    <div id="liability-title"><%= t('liabilityName') %> : <%= @liability.title %></div>
    <div id="liability-description"><%= @liability.description %></div>
    <br/>

    <div id="liability-amt"><%= t('amount') %> : <%= @currency_type + " " %><%= @liability.amount %></div>
    <div id="liability-date"><%= t('createdAt') %> : <%= @liability.created_at.strftime("%A, %d %B, %Y") %></div>
  </div>


</div>