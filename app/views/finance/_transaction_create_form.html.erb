<% form_for :transaction do |form| %>
    <div id="create_user_form">

      <div class="label-field-pair">
        <label for="title"><%= t('title') %> </label>

        <div class="text-field-bg"><%= form.text_field :title %> </div>
      </div>
      <div class="label-field-pair">
        <label for="description"><%= t('description') %> </label>

        <div class="text-field-bg"><%= form.text_field :description %> </div>
      </div>


      <div class="label-field-pair">
        <label for="amount"><%= t('amount') %></label>

        <div class="text-field-bg"><%= form.text_field :amount %> </div>
      </div>
      <div class="label-field-pair">
        <label for="category"><%= t('category') %></label>

        <div class="text-input-bg"><%= select :transaction, :category_id, @categories.map { |c| [c.name, c.id] }, :prompt=>t('selectACategory') %></div>
      </div>

      <%= submit_tag "â–º " + t('save'), :class=>'submit_button' %>
    </div>
<% end %>