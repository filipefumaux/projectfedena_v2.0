<div id="content-header">
  <img src="/images/admission/admission_page_logo.jpg"/>

  <h1><%= t('transactions') %></h1>

  <h3><%= t('finance.academicYearReport') %></h3>

  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png", :border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <div class="label-field-pair">
    <label for="monthly_payslip_salary_date"><%= t('selectYear') %></label>

    <div class="text-input-bg">


      <%= select_year Date.today, {:prompt=> t('selectYear'), :end_year => 2050},
                      {:onChange => "#{remote_function(:url => {:action => "update_year_report"},
                                                       :with => "'date='+value")}"} %>
    </div>
  </div>

</div>
<div id="year"></div>