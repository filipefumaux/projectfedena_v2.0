<label class="head_label"><%= t('add') %> <%= t('particularsForAdditionalFees') %><span></span></label>

<% form_remote_for :finance_fee_particulars, :url => {:action => 'add_particulars_create', :id => @collection_date.id} do |form| %>
    <div id="form-errors"></div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t("finance.feeName") %> :</label></div>
      <div class="input-container"><%= form.text_field :name %></div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t("finance.feeDesc") %> :</label></div>
      <div class="input-container"><%= form.text_field :description %></div>
    </div>
    <div class="label-field-pair2">
      <div class="label-container2"><label><%= t('createUsing') %></label></div>
      <div class="input-container2">
        <div class="opt"><%= radio_button("particulars", "select", "all", :checked => true) %><%= t("all") %></div>
        <div class="opt"><%= radio_button("particulars", "select", "student",
                                          {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
                                                                           :with => "'select_value='+value")}"}) %>
          <%= t("admissionNumber") %>
        </div>
        <div class="opt"> <%= radio_button("particulars", "select", "category",
                                           {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
                                                                            :with => "'select_value='+value")}"}) %>
          <%= t('student.category') %>
        </div>
      </div>
    </div>
    <div id="student"></div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('feeAmount') %> :</label></div>
      <div class="input-container"><%= form.text_field :amount %></div>
    </div>
    <%= submit_tag "â–º "+t("add"), :class=>'submit_button' %>

<% end %>



