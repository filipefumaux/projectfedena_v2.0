<div id="content-header">
  <img src="/images/examination/show_exam.png" alt="Exam"/>

  <h1><%= t('exams') %></h1>

  <h3><%= t('home') %></h3>

  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png", :border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <% if permitted_to? :index, :grading_levels %>
        <div class="link-box">
          <div class="link-heading"><%= link_to t('exam.setGrading'), :controller=>'grading_levels', :action=>'index' %> </div>
          <div class="link-descr"><%= t('exam.descSetGrading') %></div>
        </div>
    <% end %>
    <% if permitted_to? :create_exam, :exam %>
        <div class="link-box">
          <div class="link-heading"><%= link_to t('exam.management'), :action=>'create_exam' %>  </div>
          <div class="link-descr"><%= t('exam.descManagement') %>.</div>
        </div>
    <% end %>
    <% if permitted_to? :create_additional_exam, :additional_exam %>
        <div class="link-box">
          <div class="link-heading"><%= link_to t('exam.additional'), :controller=>'additional_exam', :action=>'create_additional_exam' %></div>
          <div class="link-descr"><%= t('exam.descAdditional') %></div>
        </div>
    <% end %>
    <div class="link-box">
      <div class="link-heading"><%= link_to t('exam.wiseReport'), :action=>'exam_wise_report' %></div>
      <div class="link-descr"><%= t('exam.descWiseReport') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to t('exam.subjectWiseReport'), :action=>'subject_wise_report' %> </div>
      <div class="link-descr"><%= t('exam.descSubjectWiseReport') %></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to t('exam.groupedReport'), :action=>'grouped_exam_report' %></div>
      <div class="link-descr"><%= t('exam.descGroupedReport') %></div>
    </div>
    <div class="extender"></div>
  </div>
</div>

