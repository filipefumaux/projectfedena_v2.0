<div id="content-header">
  <img src="/images/examination/show_exam.png" alt="Exam"/>

  <h1><%= t('exams') %></h1>

  <h3><%= t("edit") %> <%= t("examGroup") %></h3>

  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png", :border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="bread_crumb">
      <%= link_to t('courses'), courses_path %> &raquo;
      <%= link_to @course.full_name, @course %> &raquo;
      <%= link_to t('batch.title') + " #{@batch.name}" %> &raquo;
      <%= link_to t('exams'), batch_exam_groups_path(@batch) %> &raquo;
      <%= t("edit") %> <%= t("exam.title") %>
    </div>


    <% form_for [@batch, @exam_group] do |f| %>

        <%= f.error_messages %>


        <div class="label-field-pair">
          <label for="exam_name"><%= f.label :name %></label>

          <div class="text-input-bg"> <%= f.text_field :name %></div>
        </div>
        <div id="sub_button"><%= submit_tag "", :value => "â–º " + t('save'), :class => "submit_button" %></div>


    <% end %>

  </div>
</div>