<% form_for :holiday do |f| %>
    <%= select :holiday, :weekdays, [t('sunday'), t('monday'), t('tuesday'), t('wednesday'), t('thursday'), t('friday'), t('saturday')] %>

    <%= submit_tag t('submit') %>
<% end %>
<% unless @weekly_holidays.nil? %>
    <% @weekly_holidays.each do |d| %>
        <%= d.config_value %><%= link_to t("delete"), :action=>"delete", :id=>d.id %>

    <% end %>
<% end %>