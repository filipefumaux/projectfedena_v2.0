<% form_for :sms_settings do |s| %>
    <%= s.check_box :application_enabled, :checked=>@application_sms_enabled.is_enabled %><%= t('application') %><br/>
    <%= s.submit t("update") %>
<% end %>
<br/><br/>
<% unless @application_sms_enabled.is_enabled == false %>
    <%= t('generalSMSSettings') %>:<br/>
    <% form_for :general_settings, :url=>{:controller=>"sms_settings", :action=>"update_general_sms_settings"} do |sms| %>
        <%= sms.check_box :student_admission_enabled, :checked=>@student_admission_sms_enabled.is_enabled %>StudentAdmission
        <br/>
        <%= sms.check_box :exam_schedule_enabled, :checked=>@exam_schedule_sms_enabled.is_enabled %>ExamSchedule<br/>
        <%= sms.check_box :result_publish_enabled, :checked=>@result_publish_sms_enabled.is_enabled %>ResultPublish<br/>
        <%= sms.check_box :student_attendance_enabled, :checked=>@student_attendance_sms_enabled.is_enabled %><%= t('attendance.title') %><br/>
        <%= sms.check_box :news_events_enabled, :checked=>@news_events_sms_enabled.is_enabled %><%= t('newsEvents') %><br/><br/>
        <%= sms.check_box :sms_parents_enabled, :checked=>@parents_sms_enabled.is_enabled %><%= t('sendSMS') %> <%= t('toParents') %><br/>
        <%= sms.check_box :sms_students_enabled, :checked=>@students_sms_enabled.is_enabled %><%= t('sendSMS') %> <%= t('toStudents') %><br/>
        <%= sms.submit t("update") %>

    <% end %>
<% end %>
